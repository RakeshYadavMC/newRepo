<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>El_Tesoro_Single_Barrel</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Case__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Barrel_Has_Been_Registered_By_Compliance</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Barrel_Registered_by_Compliance</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>courtney.reardon@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>dawn.masterson@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>dionicia.sandoval@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>julie.goliak@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sean.mcfarland@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Barrel__c.Barrel_Registration_Requested__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Email Compliance</label>
        <name>Email_Compliance</name>
    </approvalStep>
    <description>An email will be sent to Market readiness team  to register the barrel and once they have registered it they will approve this process which will update the barrel record and notify the plant workers.</description>
    <emailTemplate>Single_Barrel/Registering_Barrel_with_Compliance</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Barrel__c.Barrel_Registration_Requested__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Barrel__c.Brand__c</field>
            <operation>equals</operation>
            <value>El Tesoro</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Barrel_Notification_Sent_for_Approval</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>El Tesoro Barrel Registration</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
