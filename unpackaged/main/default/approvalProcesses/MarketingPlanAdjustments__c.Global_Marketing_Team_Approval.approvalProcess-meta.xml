<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>TransferringMarketingPlan__c</field>
        <field>ReceivingMarketingPlan__c</field>
        <field>Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jennifer.mordini@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Submit a request where the From and To records are within the Region.</description>
        <entryCriteria>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Region_From__c</field>
                <operation>contains</operation>
                <value>Global Marketing</value>
            </criteriaItems>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Region__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Within Region - Global Marketing</label>
        <name>Within_Region_Global_Marketing</name>
    </approvalStep>
    <description>Marketing Plan Transfers needing approval for Global Marketing team.</description>
    <emailTemplate>unfiled$public/Approval_Request_Sent_to_Approver</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MarketingPlanAdjustments__c.Country_From__c</field>
            <operation>equals</operation>
            <value>Global Marketing</value>
        </criteriaItems>
        <criteriaItems>
            <field>MarketingPlanAdjustments__c.Request_Status__c</field>
            <operation>notEqual</operation>
            <value>Rejected,Canceled,Approved,Failed</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Marketing_Plan_Transfer_Approval_Response_for_Mexico_US</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SetEmailMPTransferReceipient</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetReceivingMPTransferQueueEmail</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Request_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Marketing_Plan_Transfer_Rejection_Response_for_US</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SetEmailMPTransferReceipient</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetReceivingMPTransferQueueEmail</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Request_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Request_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Global Marketing Team Approval</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
