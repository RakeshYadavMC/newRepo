<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>TransferringMarketingPlan__c</field>
        <field>ReceivingMarketingPlan__c</field>
        <field>Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>christa.decourteney@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Submit a request where the From and To records are within the same Brand but across Region</description>
        <entryCriteria>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Brand__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Region__c</field>
                <operation>equals</operation>
                <value>No</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Within Brand, Across Region</label>
        <name>Within_Brand_Across_Region</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>christa.decourteney@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Submit a request where the From and To records are within the same Brand, but across ATL/BTL</description>
        <entryCriteria>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Brand__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Division__c</field>
                <operation>equals</operation>
                <value>No</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Within Brand Cross Division</label>
        <name>Within_Brand_Cross_Division</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>trent.chapman@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Submit a request where the From and To records are across Brands but within ATL or BTL Division</description>
        <entryCriteria>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Brand__c</field>
                <operation>equals</operation>
                <value>No</value>
            </criteriaItems>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Region__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Cross Brands Within Division</label>
        <name>Cross_Brands_Within_Division</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>christa.decourteney@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>trent.chapman@beamsuntory.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Submit a request where the From and To records are across Brand and across ATL/BTL</description>
        <entryCriteria>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Brand__c</field>
                <operation>equals</operation>
                <value>No</value>
            </criteriaItems>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Within_Same_Region__c</field>
                <operation>equals</operation>
                <value>No</value>
            </criteriaItems>
        </entryCriteria>
        <label>Cross Brand - Cross Division</label>
        <name>Cross_Brand_Cross_Division</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Australia Marketing Plan Transfers Approval Flow</description>
    <emailTemplate>unfiled$public/Approval_Request_Sent_to_Approver</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MarketingPlanAdjustments__c.Country_From__c</field>
            <operation>equals</operation>
            <value>AUS</value>
        </criteriaItems>
        <criteriaItems>
            <field>MarketingPlanAdjustments__c.Request_Status__c</field>
            <operation>notEqual</operation>
            <value>Rejected,Canceled,Approved,Failed</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Marketing_Plan_Transfer_Approval_Response_for_Mexico_US</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SetEmailMPTransferReceipient</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetReceivingMPTransferQueueEmail</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Request_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Marketing_Plan_Transfer_Rejection_Response_for_US</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SetEmailMPTransferReceipient</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetReceivingMPTransferQueueEmail</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Request_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Request_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>AUS Approval Flow</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
