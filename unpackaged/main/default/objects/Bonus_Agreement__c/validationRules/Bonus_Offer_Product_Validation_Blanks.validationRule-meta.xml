<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Bonus_Offer_Product_Validation_Blanks</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(Brand__c),ISBLANK(Label__c))</errorConditionFormula>
    <errorDisplayField>Brand__c</errorDisplayField>
    <errorMessage>Please only select Brand OR Label but not both</errorMessage>
</ValidationRule>
